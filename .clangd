CompileFlags:
  # 编译数据库路径
  CompilationDatabase: build/

# 诊断配置
Diagnostics:
  ClangTidy:
    Add: [
      performance-*,
      modernize-*,
      readability-*
    ]
    Remove: [
      modernize-use-trailing-return-type
    ]
  UnusedIncludes: Strict

# 索引配置
Index:
  Background: Build

# 补全配置
Completion:
  AllScopes: Yes

# 悬停提示
Hover:
  ShowAKA: Yes

